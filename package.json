{
  "name": "beefy-lrt-api",
  "version": "1.0.0",
  "license": "gpl-3.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "ts-node-dev --require=dotenv/config src/index.ts",
    "format": "biome check --write --unsafe src/**/*.{ts,graphql}",
    "test:format": "biome check src/**/*.{ts,graphql}",
    "test:ts": "tsc --noEmit",
    "package:check": "ncu",
    "package:fix": "ncu -u && npm install",
    "update:addressbook": "ncu --upgrade blockchain-addressbook viem && npm i",
    "postinstall": "npm --silent run codegen",
    "codegen": "npx graphql-codegen --config src/graphql/codegen.ts",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^5.1.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/under-pressure": "^8.3.0",
    "async-lock": "^1.4.1",
    "blockchain-addressbook": "^0.54.78",
    "csv-stringify": "^6.5.0",
    "date-fns": "^3.6.0",
    "decimal.js": "^10.4.3",
    "fastify": "^4.26.2",
    "fluent-json-schema": "^4.2.1",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "pino": "^8.19.0",
    "viem": "^2.37.12"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.0",
    "@biomejs/biome": "1.8.3",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/client-preset": "^5.1.1",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@parcel/watcher": "^2.5.1",
    "@types/async-lock": "^1.4.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.11.30",
    "dotenv": "^16.4.5",
    "lefthook": "^1.11.7",
    "npm-check-updates": "^16.14.18",
    "pino-pretty": "^11.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": "^20.10.0"
  },
  "packageManager": "yarn@1.22.22"
}
